{%- liquid
  assign logo_width = section.settings.logo_width
  assign logo_height = logo_width | divided_by: section.settings.logo.aspect_ratio
  if logo_height > 100
    assign logo_width = 100 | times: section.settings.logo.aspect_ratio
    assign logo_height = 100
  endif
-%}

<header class="header-wrapper">
  <div class="header">
    <nav class="nav">
      <ul class="nav__link-list">
        <li class="nav__link"><a class="fancy-link" href="/pages/where-to-find-us">Where to Find Us</a></li>
        <li class="nav__link"><a class="fancy-link" href="/#about-us">About Us</a></li>
        <li class="nav__link"><a class="fancy-link" href="/#our-farm">Our farm</a></li>
        <li class="nav__link"><a class="fancy-link" href="/#our-inspiration">Our inspiration</a></li>
      </ul>
      <button class="nav__hamburger" aria-label="Open menu" aria-controls="mobile-menu" aria-expanded="false">
        <span class="nav__hamburger-bar"></span>
        <span class="nav__hamburger-bar"></span>
        <span class="nav__hamburger-bar"></span>
      </button>
      <a class="nav__logo" href="/">
        <img
          src="{{ 'logo.svg' | asset_url }}"
          width="{{ logo_width }}"
          height="{{ logo_height }}"
          alt="{{ shop.name }}"
        >
      </a>
    </nav>
    <div id="mobile-menu" class="mobile-menu" aria-hidden="true">
      <button class="mobile-menu__close" aria-label="Close menu">&times;</button>
      <ul class="mobile-menu__links">
        <li><a href="/">Home</a></li>
        <li><a href="/pages/where-to-find-us">Where to Find Us</a></li>
        <li><a href="/#about-us">About Us</a></li>
        <li><a href="/#our-farm">Our farm</a></li>
        <li><a href="/#our-inspiration">Our inspiration</a></li>
      </ul>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 100,
      "unit": "px",
      "label": "Logo width"
    }
  ]
}
{% endschema %} 